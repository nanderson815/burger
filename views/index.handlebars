<h1>Burgers!</h1>

<div class="exist">
    <h2>Burgers you can eat!</h2>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
            {{burger_name}}
            <button class="change-status" data-id="{{id}}" data-newsleep="{{devoured}}">
                Eat the burger!
            </button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="devoured">
    <h2>Burgers that you have eaten!</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>{{burger_name}}</li>
        {{/if}}
        {{/each}}
    </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="name">Buger Name:</label>
        <input type="text" id="name" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>