<div class="container">
    <h1 class="title">Burger Joint</h1>
    <div class="cards">
        <div class="exist card">
            <h2>Specialty Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button class="change-status button1" data-id="{{id}}" data-newdevoured="true">
                        Discontinue
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="devoured card">
            <h2>Discontinued Items</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

        <div class="card">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="name">Buger Name:</label>
                    <input type="text" id="name" name="name">
                </div>

                <button class="button1" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>